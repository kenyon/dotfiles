[user]
	email = kralph@qgov.net
	name = Kenyon Ralph
[color]
	ui = always
[core]
	editor = emacsclient --tty
	pager = "if [ -x /usr/local/bin/diff-so-fancy ]; then \
	         diff-so-fancy | less --quit-if-one-screen --LONG-PROMPT --ignore-case --RAW-CONTROL-CHARS --HILITE-UNREAD --no-init; \
			 else less --quit-if-one-screen --LONG-PROMPT --ignore-case --RAW-CONTROL-CHARS --HILITE-UNREAD --no-init; \
			 fi"
[commit]
	verbose = true
[tag]
	gpgSign = true
[push]
	default = simple
	gpgSign = if-asked
	followTags = true
[log]
	decorate = full
[http]
	cookiefile = ~/.gitcookies
[pull]
	ff = only
[credential]
	helper = store
[diff]
	colorMoved = true
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[color "diff"]
	meta = 11
	frag = magenta bold
	commit = yellow bold
	old = red bold
	new = green bold
	whitespace = red reverse
